<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindfulApp.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="White"
             Padding="20">

    <ScrollView>
       
        
        <StackLayout Spacing="20">
            <Button Text="🏠 Home" Clicked="OnHomeClicked"
BackgroundColor="Transparent" TextColor="#007BFF"
HorizontalOptions="Start" FontAttributes="Bold"/>

            <Label Text="Edit Profile" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry x:Name="FullNameEntry" Placeholder="Full Name"/>
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="PhoneEntry" Placeholder="Phone" Keyboard="Telephone"/>
            <Entry x:Name="LocationEntry" Placeholder="Location"/>

            <Button Text="Save" BackgroundColor="#1B3BFF" TextColor="White" Clicked="OnSaveClicked"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindfulApp.Views.LandingPage"
             BackgroundColor="#F0F4FF">

    <Grid RowDefinitions="*,2*,*" ColumnDefinitions="*">

        <!-- Logo & App Name -->
        <StackLayout Grid.Row="0"
             VerticalOptions="Center"
             HorizontalOptions="Center"
             Spacing="20"
             Padding="20">

           

            <!-- App Title -->
            <Label Text="Mindful App"
           FontSize="40"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           TextColor="#3B2E7E"
           Margin="0,-10,0,0"/>
            

            <!-- Subtitle -->
            <Label Text="Your daily companion for mindfulness and well-being"
           FontSize="18"
           Opacity="0.85"
           HorizontalOptions="Center"
           TextColor="#6D5FA3"
           HorizontalTextAlignment="Center"
           WidthRequest="280"
           LineBreakMode="WordWrap"/>

        </StackLayout>

        <!-- Buttons -->
        <StackLayout Grid.Row="1" Spacing="20" Padding="40" VerticalOptions="Center">
            <Button Text="Admin" 
                    BackgroundColor="#8E7CC3" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    CornerRadius="30" 
                    HeightRequest="60"
                   
                    Clicked="AdminButton_Clicked" />

            <Button Text="User" 
                    BackgroundColor="#A58FFF" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    CornerRadius="30" 
                    HeightRequest="60"
                    
                    Clicked="UserButton_Clicked" />
        </StackLayout>

        <!-- Footer -->
        <StackLayout Grid.Row="2" VerticalOptions="End" HorizontalOptions="Center" Padding="10">
            <Label Text="© 2025 Mindful App" FontSize="14" TextColor="#8A8A8A" />
        </StackLayout>

    </Grid>
</ContentPage>

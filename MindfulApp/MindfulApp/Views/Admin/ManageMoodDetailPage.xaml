<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindfulApp.Views.Admin.ManageMoodDetailPage"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             Title="Mood Details"
             Padding="20"
             BackgroundColor="White">

    <ScrollView>
        <StackLayout Spacing="20">
            <Button Text="🏠 Home" Clicked="OnHomeClicked"
    BackgroundColor="Transparent" TextColor="#007BFF"
    HorizontalOptions="Start" FontAttributes="Bold"/>

            <!-- Mood Picker -->
            <Picker x:Name="MoodPicker" Title="Select Mood">
                <Picker.Items>
                    <x:String>Great</x:String>
                    <x:String>Good</x:String>
                    <x:String>Okay</x:String>
                    <x:String>Low</x:String>
                    <x:String>Sad</x:String>
                </Picker.Items>
            </Picker>

            <!-- Note -->
            <Entry x:Name="NoteEntry"
                   Placeholder="Note (min 10 characters)"
                   MaxLength="200"/>

            <!-- Date -->
            <DatePicker x:Name="DateEntry" />

            <!-- User Picker -->
            <Picker x:Name="UserPicker" Title="Select User" />

            <Button Text="Save"
                    BackgroundColor="#1B3BFF"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnSaveClicked"/>

        </StackLayout>
    </ScrollView>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindfulApp.Views.Admin.AdminLoginPage"
             Title="Admin Login"
             BackgroundColor="#0E1633"
             Padding="20,40,20,20">

    <ScrollView>
        <StackLayout Spacing="30" VerticalOptions="CenterAndExpand">
            <Button Text="🏠 Home" Clicked="OnHomeClicked"
    BackgroundColor="Transparent" TextColor="#007BFF"
    HorizontalOptions="Start" FontAttributes="Bold"/>

            <Frame WidthRequest="80" HeightRequest="80" CornerRadius="40" BackgroundColor="#1B3BFF" HorizontalOptions="Center">
                <Label Text="🛡" FontSize="36" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <Label Text="Admin Login" FontSize="32" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
            <Label Text="Sign in to manage the app" FontSize="16" TextColor="#A0AFCB" HorizontalOptions="Center"/>

            <Frame BackgroundColor="#1A2248" CornerRadius="12" Padding="20" HasShadow="False">
                <StackLayout Spacing="20">

                    <Entry x:Name="EmailEntry" Placeholder="Email Address" PlaceholderColor="#4D6B99" TextColor="White" Keyboard="Email"/>
                    <Entry x:Name="PasswordEntry" Placeholder="Password" PlaceholderColor="#4D6B99" TextColor="White" IsPassword="True"/>

                    <Button x:Name="SignInBtn" Text="SIGN IN" BackgroundColor="#1B3BFF" TextColor="White" CornerRadius="8" HeightRequest="50" Clicked="OnAdminSignInClicked"/>
                </StackLayout>
            </Frame>

            <StackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Manage your mindful app efficiently 🌿" FontSize="14" TextColor="#4D6B99" HorizontalOptions="Center"/>
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>
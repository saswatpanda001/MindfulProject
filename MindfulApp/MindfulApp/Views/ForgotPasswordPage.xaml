<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindfulApp.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20">
                <Button Text="🏠 Home" Clicked="OnHomeClicked"
BackgroundColor="Transparent" TextColor="#007BFF"
HorizontalOptions="Start" FontAttributes="Bold"/>
                

                <Label Text="Forgot Password" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

                <Entry x:Name="EmailEntry" 
                   Placeholder="Email" 
                   Keyboard="Email"/>

                <Entry x:Name="NewPasswordEntry" 
                   Placeholder="New Password" 
                   IsPassword="True"/>

                <Entry x:Name="ConfirmNewPasswordEntry" 
                   Placeholder="Confirm New Password" 
                   IsPassword="True"/>

                <Button Text="Reset Password" 
                    BackgroundColor="#1B3BFF" 
                    TextColor="White"
                    Clicked="OnResetPasswordClicked"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>